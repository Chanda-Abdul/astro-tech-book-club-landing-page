---
import CTA from './CTA.astro';
import ResponsiveImage from './ResponsiveImage.astro';
---

<section class='hero'>
  <div class='desktop-column'>
    <h1>Join the ultimate tech book club</h1>
    <p>
      Turn your reading time into learning time with fellow tech enthusiasts.
      Get curated recommendations, join vibrant discussions, and level up your
      skills one chapter at a time.
    </p>

    <CTA />
  </div>

  <ResponsiveImage
    mobileImgUrl='/assets/media/images/image-hero-mobile.webp'
    tabletImgUrl='/assets/media/images/image-hero-tablet.webp'
    desktopImgUrl='/assets/media/images/image-hero-desktop.webp'
    alt='hero image'
  />
</section>

<style lang='scss'>
  .hero {    position: static;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100vw;
    background: var(--card-gradient);
     background-repeat: repeat;
 background-image: url('/assets/media/images/pattern-light-bg.svg');
    padding-top: var(--spacing-3xl);

    &::before {
      content: '';
      background-repeat: repeat;
      background-image: url('/assets/media/images/pattern-light-bg.svg');
     background: var(--card-gradient);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.4; 
      backdrop-filter: blur(100px);
      z-index: -1;
    }
    @media screen and (min-width: 37.5em) {
      /* Tablet > 600px */
      padding-top: var(--spacing-4xl);

      &::before {
      }
    }
    @media screen and (min-width: 56.25em) {
      /* Desktop > 600px */
      padding-top: var(--spacing-4xl);

      &::before {
      }
    }
  }
</style>
